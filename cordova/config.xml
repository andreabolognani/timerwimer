<?xml version='1.0' encoding='utf-8'?>
<widget id="org.kiyuko.timerwimer" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Timer Wimer</name>
    <description>
        Countdown timers for your device
    </description>
    <author email="eof@kiyuko.org" href="http://kiyuko.org">
        Andrea Bolognani
    </author>
    <content src="index.html" />
    <icon src="www/images/timerwimer.png" />
    <platform name="android">
        <icon src="www/images/timerwimer-mdpi.png" density="mdpi" />
        <icon src="www/images/timerwimer-hdpi.png" density="hdpi" />
        <icon src="www/images/timerwimer-xhdpi.png" density="xhdpi" />
        <icon src="www/images/timerwimer-xxhdpi.png" density="xxhdpi" />
        <icon src="www/images/timerwimer-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarBackgroundColor" value="#4981a6" />
</widget>
